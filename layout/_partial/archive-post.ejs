<article class="archive-article archive-type-<%= post.layout %>">
  <div class="archive-article-inner">
    <header class="archive-article-header">
      <span class="archive-article-date">
        <time datetime="<%= date_xml(post.date) %>" itemprop="datePublished"><%= date(post.date, 'MMM D') %></time>
        <div class="archive-post-tags">
          <%- list_tags(post.tags, {show_count: false, class: 'article-tag'}) %>
        </div>
      </span>
      <%- partial('post/title', {class_name: 'archive-article-title'}) %>
    </header>
  </div>
</article>